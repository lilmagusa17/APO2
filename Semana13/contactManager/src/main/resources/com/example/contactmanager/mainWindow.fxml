<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<VBox alignment="CENTER" spacing="20.0"  xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.contactmanager.control.MainWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
    <MenuBar>
        <menus>
            <Menu mnemonicParsing="false" text="Manager">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#loadAddContact" text="Add Contact" />
                    <MenuItem mnemonicParsing="false" onAction="#loadContactList" text="Contact List" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                </items>
            </Menu>

        </menus>
    </MenuBar>
    <BorderPane fx:id="mainPanel" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #ABCDEF;" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
