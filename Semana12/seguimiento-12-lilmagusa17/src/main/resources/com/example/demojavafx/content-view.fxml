<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demojavafx.control.ContentViewController"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="CAJA FUERTE" alignment="CENTER" style="-fx-font-weight: bold"></Label>
    <Label text="Este es el contenido de la caja fuerte:"></Label>

    <TextArea fx:id="textArea" prefHeight="150.0" prefWidth="150.0" text="be happy :)" editable="true"></TextArea>

    <HBox spacing="15.0">
        <Button fx:id="btn1" text="Cambiar pass" onAction="#changePassword" ></Button>
        <Button fx:id="btn2" text="Cerrar Caja Fuerte" onAction="#close"></Button>
    </HBox>

</VBox>
